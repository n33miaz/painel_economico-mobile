{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Expo Android",
      "type": "shell",
      "command": "npx expo start --android",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting project",
          "endsPattern": "Android logs|Developer tools"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Produção (Simulação)",
      "type": "shell",
      "command": "npx expo start --no-dev --minify",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
